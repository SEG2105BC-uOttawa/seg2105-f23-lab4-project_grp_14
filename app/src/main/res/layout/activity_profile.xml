<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newAvatarTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/new_avatar_title"
            android:textSize="30sp"
            android:textStyle="bold"
            android:translationY="100px" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:foregroundGravity="center"
            android:rowCount="2"
            android:translationY="200px">

            <ImageView
                android:id="@+id/logoImage00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="SetTeamIcon"
                app:srcCompat="@drawable/ic_logo_01"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/logoImage01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="SetTeamIcon"
                app:srcCompat="@drawable/ic_logo_02"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/logoImage02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="SetTeamIcon"
                app:srcCompat="@drawable/ic_logo_03"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/logoImage03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="SetTeamIcon"
                app:srcCompat="@drawable/ic_logo_04"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/logoImage04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="SetTeamIcon"
                app:srcCompat="@drawable/ic_logo_05"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/logoImage05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="SetTeamIcon"
                app:srcCompat="@drawable/ic_logo_00"
                tools:ignore="SpeakableTextPresentCheck" />

        </GridLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/new_avatar_button"
            android:translationY="300px" />

    </LinearLayout>
</RelativeLayout>